generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Passkey {
  id             String   @id @default(cuid())
  userId         String
  userinfo       String   @unique
  credentialId   String
  publicKey      Bytes
  counter        Int
  transports     String?
  deviceType     String
  backedUp       Boolean
  createdAt      DateTime @default(now())
  webAuthnUserID String
  secretKey      String?
}

model Election {
  id                    String   @id @default(cuid())
  title                 String
  description           String?
  createdAt             DateTime @default(now())
  voters                String[] @default([])
  results               Json
  transactionSignatures String[] @default([])
}
