generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Passkey {
  id               String   @id @default(cuid())     // Database ID
  userId           String                          // User reference
  webAuthnUserID   String
  userinfo         String      @unique                        // User email or info
  credentialId     String                              // credential.id
  publicKey       Bytes                                // store publicKey as binary
  counter          Int
  transports       String?                             // Comma-separated string of transports
  deviceType       String                              // e.g., "platform" or "cross-platform"
  backedUp        Boolean
  createdAt       DateTime   @default(now())
}
